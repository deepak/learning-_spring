<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="triangle" class="Triangle">
        <property name="pointA" ref="point-0"></property>
        <property name="pointB" ref="point-1"></property>
        <property name="pointC" ref="point-1"></property>
    </bean>

    <bean id="point-0" class="Point">
        <property name="x" ref="origin-point-1" />
        <property name="y" value="0" />
    </bean>

    <bean id="point-1" class="Point">
        <property name="x" value="0" />
        <property name="y" value="20" />
    </bean>

    <bean id="point-2" class="Point">
        <property name="x" value="0" />
        <property name="y" value="-20" />
    </bean>

    <bean id="origin-point-1" class="java.lang.Integer">
        <constructor-arg value="11" />
    </bean>
</beans>